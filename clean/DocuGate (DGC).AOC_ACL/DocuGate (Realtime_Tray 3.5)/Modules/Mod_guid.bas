Public Function GetGuid() As String

 On Error GoTo Err_Handler
 Set m_rs = New ADODB.Recordset
 m_rs.Open "SELECT NEWID() as NewGuid", gconn, adOpenStatic, adLockOptimistic
 GetGuid = m_rs!NewGuid
 m_rs.Close
 Set m_rs = Nothing
 Exit Function
  
Err_Handler:
   GetGuid = Err.Description
End Function

